@model Project

@{
    ViewData["Title"] = "Create Project";
}

<h1>Create new project</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <p>Create a new Project:</p>
        <hr />

        @Html.ValidationSummary(true, "", new {@class="text-danger"})

        @* Inputs and validations *@
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new {@class="control-label col-md-2"})
            @Html.EditorFor(model => model.Title, "", new {@class="form-control"})
            @Html.ValidationMessageFor(model => model.Title, "", new {@class="text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TechStack, htmlAttributes: new {@class="control-label col-md-2"})
            @Html.EditorFor(model => model.TechStack, "", new {@class="form-control"})
            @Html.ValidationMessageFor(model => model.TechStack, "", new {@class="text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new {@class="control-label col-md-2"})
            @Html.EditorFor(model => model.Description, "", new {@class="form-control"})
            @Html.ValidationMessageFor(model => model.Description, "", new {@class="text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GitHubUrl, htmlAttributes: new {@class="control-label col-md-2"})
            @Html.EditorFor(model => model.GitHubUrl, "", new {@class="form-control"})
            @Html.ValidationMessageFor(model => model.GitHubUrl, "", new {@class="text-danger"})
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DeployedUrl, htmlAttributes: new {@class="control-label col-md-2"})
            @Html.EditorFor(model => model.DeployedUrl, "", new {@class="form-control"})
            @Html.ValidationMessageFor(model => model.DeployedUrl, "", new {@class="text-danger"})
        </div>

        <button type="submit" value="Create" class="btn btn-dark">Create</button>
    </div>
}